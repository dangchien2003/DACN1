<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Trang chủ</h3>
            </div>            
        </div>
        <div class="clearfix"></div>
        <div class="">
            <div class="row col-md-12">
                <div class="col-md-6">
                    <div class=" ">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2><i class="fa fa-bars"></i> Quản lý tài khoản </h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>

                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <div class="col-12">
                                    <span class="fw-bolder">Tổng số khách hàng: {{totalCustomers}}</span>
                                </div>
                                <div class="col-12 mt-2">
                                    <span class="fw-bold">Top 10 khách hàng:</span>
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Tài Khoản</th>
                                                <th scope="col">Số đơn hàng</th>
                                                <th scope="col">Số tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each top10Customers}}
                                            <tr>
                                                <th scope="row">{{increase @index}}</th>
                                                <td>{{taiKhoan}}</td>
                                                <td>{{SoLuongDonHang}}</td>
                                                <td>{{currency TongTienMua}}</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="  ">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2><i class="fa fa-bars"></i> Quản lý đơn hàng</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <div class="col-12">
                                    <form action="/admin/dashboard" method="GET" class="d-flex justify-content-start">
                                        <div class="row">
                                            <div class="col-4">
                                                <input type="date" class="form-control form-control-sm" {{#if
                                                    startDate}} value="{{startDate}}" {{/if}} name="startDate"
                                                    id="startDate">
                                            </div>
                                            <div class="col-4">
                                                <input type="date" class="form-control form-control-sm" {{#if endDate}}
                                                    value="{{endDate}}" {{/if}} name="endDate" id="endDate">
                                            </div>
                                            <div class="col-4">
                                                <button type="submit" class="btn btn-primary btn-sm">Xem</button>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="mt-2">
                                        <span class="fw-bolder">Tổng số đơn hàng:
                                            {{invoicesReport.[0].SoLuongDonHang}}</span>
                                        {{#if invoicesReport.[0].TongTien}}
                                        <span class="fw-bolder">Tổng tiền: {{currency invoicesReport.[0].TongTien}}</span>
                                        {{else}}
                                        <span class="fw-bolder">Tổng tiền: 0</span>
                                        {{/if}}
                                    </div>
                                </div>

                                <div class="col-xs-9">
                                    <!-- Tab panes -->


                                </div>

                                <div class="clearfix"></div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2><i class="fa fa-bars"></i> Báo cáo sản phẩm </h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>

                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <div class="col-12">
                                    <span class="fw-bolder">Tồn kho: {{sumproducts}}</span>
                                </div>
                                <div class="col-12 mt-2">
                                    <span class="fw-bold">Top 10 sản phẩm bán chạy:</span>
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Tên sản phẩm</th>
                                                <th scope="col">Hình ảnh</th>
                                                <th scope="col">Số lượt mua</th>
                                                <th scope="col">Tổng tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each top10products}}
                                            <tr>
                                                <th scope="row">{{increase @index}}</th>
                                                <td>{{TenSanPham}}</td>
                                                <td><img src="/uploads/{{AnhSanPham}}" style="height: 50px;"></td>
                                                <td>{{SoLuongMua}}</td>
                                                <td>{{currency TongTien}}</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-12 mt-2">
                                    <span class="fw-bold">Sản phẩm mới:</span>
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Tên sản phẩm</th>
                                                <th scope="col">Hình ảnh</th>
                                                <th scope="col">Số lượng</th>
                                                <th scope="col">Giá tiền</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each top10NewProducts}}
                                            <tr>
                                                <th scope="row">{{increase @index}}</th>
                                                <td>{{TenSanPham}}</td>
                                                <td><img src="/uploads/{{HinhAnh}}" style="height: 50px;"></td>
                                                <td>{{SoLuong}}</td>
                                                <td>{{currency GiaTien}}</td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>