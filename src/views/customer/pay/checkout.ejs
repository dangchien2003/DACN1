<div class="container checkout">
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Giỏ hàng của bạn</span>
                <!-- <span class="badge badge-secondary badge-pill">3</span> -->
            </h4>
            <ul class="list-group mb-3 sticky-top">
            <% for(var i = 0; i < sanPham.length; i++) {%>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0"> <%= sanPham[i].ten %> </h6>
                        <small class="text-muted">số lượng: <%= sanPham[i].soLuong %> </small>
                    </div>
                    <span class="text-muted"> <%= sanPham[i].tong %> VNĐ</span>
                </li>               
            <% } %>
                <li class="list-group-item">
                    <div class=" d-flex justify-content-between">
                        <span>Phí giao: </span>
                        <strong>30000</strong>
                    </div>
                    <div class=" d-flex justify-content-between">
                        <span>Tổng:</span>
                        <strong><%= tongGia %></strong>
                    </div>
                </li>
            </ul>
            <form class="card p-2">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Nhập mã">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary">Dùng</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Thông tin đơn hàng</h4>
            <form class="needs-validation" novalidate="" action="#" id="form_pay">
                <input type="text" style="display: none;" value="<%= phiShip %>
                " name="phigiao">
                <input type="text" style="display: none;" value="<%= tongGia %>" name="tong">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="ten">Tên người nhận</label>
                        <input type="text" class="form-control" id="ten" placeholder="" value="" required="" name="ten">
                        <div class="invalid-feedback"> Nhập tên người nhận</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="ten">Số điện thoại</label>
                        <input type="text" class="form-control" id="sdt" placeholder="" value="" required="" name="sdt">
                        <div class="invalid-feedback"> Nhập số điện thoại </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="address">Địa chỉ nhận hàng</label>
                    <input type="text" class="form-control" id="diachi" placeholder="" required="" name="diachi">
                    <div class="invalid-feedback"> Nhập địa chỉ </div>
                </div>
                
                
                <h4 class="mb-3">Hình thức thanh toán</h4>
                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                        <input id="credit" name="phuongthucthanhtoan" type="radio" class="custom-control-input" checked="" required="" value="1">
                        <label class="custom-control-label" for="credit">Thanh toán khi nhận hàng</label>
                        <img src="/public/customer/img/money.png" alt="" style="height: 30px;">
                    </div>
                    <div class="custom-control custom-radio">
                        <input id="debit" name="phuongthucthanhtoan" type="radio" class="custom-control-input" required="" value="2">
                        <label class="custom-control-label" for="debit">Thanh toán ngân hàng</label>
                        <img src="/public/customer/img/bank.png" alt="" style="height: 30px;">
                    </div>
                    <div class="custom-control custom-radio">
                        <input id="paypal" name="phuongthucthanhtoan" type="radio" class="custom-control-input" required="" value="3">
                        <label class="custom-control-label" for="paypal">Thanh toán Momo</label>
                        <img src="/public/customer/img/momo.png" alt="" style="height: 30px;">
                    </div>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit" id="submit">Thanh toán</button>
            </form>
        </div>
    </div>
    
</div>