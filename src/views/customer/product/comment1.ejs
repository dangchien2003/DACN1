
        <div class="row d-flex justify-content-center ">
            <div class="col-md-12 col-lg-10 col-xl-8 ">
                <div class="card">
                    <div class="card-body p-4">
                        <h4 class="text-left mb-4 pb-2">Đánh giá sản phẩm</h4>
                        <!-- input comment -->
                        <div class="form-outline mb-4" style="display: none">
                            <input type="text" id="addANote" class="form-control" placeholder="Type comment..." />
                            <label class="form-label" for="addANote">+ Add a note</label>
                        </div>
                        <% if(comments.length == 0) {%>
                            <p>Chưa có đánh giá nào</p>
                        <% } %>
                        <% for(var i = 0; i < comments.length; i++)  { %>
                            <div class="row" style="margin-bottom: 20px;">
                                <div class="col">
                                    
                                    <!-- comment -->
                                    <div class="d-flex flex-start">
                                        <img class="rounded-circle shadow-1-strong me-3"
                                            src="/customer/img/cmt_customer.jpg" alt="avatar"
                                            width="50" height="50" />
                                        <div class="flex-grow-1 flex-shrink-1">
                                            <div style="background-color: #eee9e9;">
                                                <div class="d-flex  align-items-center" >
                                                    <p class="mb-1" style="margin-right: 10px;">
                                                        <% if(comments[i].ten) { %>
                                                            <%= comments[i].ten %>
                                                        <% } else {%>
                                                            Ẩn danh
                                                        <% } %>
                                                        <div class="stars">
                                                            <% 
                                                            var countcm = 1;
                                                            for(var j = 1; j <= 5; j++) { 
                                                                if(countcm <= comments[i].soSao || !comments[i].soSao) { %>
                                                                    <span class="fa fa-star checked"></span>
                                                                <% } else { %>
                                                                    <span class="fa fa-star"></span>
                                                            <% } countcm ++; } %>
                                                        </div>
                                                        <!-- thời gian -->
                                                        <!-- <span class="small">- 2 hours ago</span> -->
                                                    </p>
                                                    <!-- <a href="#!"><i class="fas fa-reply fa-xs"></i><span class="small">
                                                            reply</span></a> -->
                                                </div>
                                                <p class="small mb-0">
                                                    <%= comments[i].danhGia %>
                                                </p>
                                            </div>

                                            <% if(comments[i].traLoiDG) { %> 
                                                <!-- tl comment -->
                                                <div class="d-flex flex-start mt-4" style="margin-top: 0.3rem!important;">
                                                    <a class="me-3" href="#">
                                                        <img class="rounded-circle shadow-1-strong"
                                                            src="/customer/img/cmt_admin.png"
                                                            alt="avatar" width="50" height="50" />
                                                    </a>
                                                    <div class="flex-grow-1 flex-shrink-1">
                                                        <div>
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <p class="mb-1">
                                                                    Admin
                                                                    <!-- thời gian -->
                                                                    <!-- <span class="small">- 3 hours ago</span> -->
                                                                </p>
                                                            </div>
                                                            <p class="small mb-0">
                                                                <%= comments[i].traLoiDG %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %> 
    
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                        
                    </div>
                </div>
            </div>
        </div>
